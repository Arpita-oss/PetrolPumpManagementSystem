document.addEventListener('DOMContentLoaded', function() {
    // Add event listener for "उधारी जमा" (Credit Deposit)
    const addCreditDepositButton = document.getElementById('addCreditDeposit');
    if (addCreditDepositButton) {
        addCreditDepositButton.addEventListener('click', function() {
            addEntry('creditDepositsContainer', 'credit_deposit_name', 'credit_deposit_amount', 'remove-entry');
        });
    }

    // Add event listener for "उधारी" (Credit)
    const addCreditButton = document.getElementById('addCredit');
    if (addCreditButton) {
        addCreditButton.addEventListener('click', function() {
            addEntry('creditsContainer', 'credit_name', 'credit_amount', 'remove-credit-entry');
        });
    }

    // Add event listeners for initial remove buttons
    document.querySelectorAll('.remove-entry, .remove-credit-entry').forEach(button => {
        button.addEventListener('click', function() {
            this.closest('.credit-entry, .credit-deposit-entry').remove();
        });
    });
});

